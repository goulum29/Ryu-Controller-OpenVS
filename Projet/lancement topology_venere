#Lancement mininet avec topo de test
sudo mn --custom Topology_test.py --topo mytopo --mac --controller remote -x

#On dit aux switch d'utliser le protocol OpenFlow
ovs-vsctl set Bridge s1 protocols=OpenFlow13
ovs-vsctl set Bridge s2 protocols=OpenFlow13
ovs-vsctl set Bridge s3 protocols=OpenFlow13

#Conf des equipements sur mininet
h1 ifconfig h1-eth0 192.168.10.1/24
h2 ifconfig h2-eth0 192.168.20.1/24
h3 ifconfig h3-eth0 192.168.30.1/24

h1 ip route add 0.0.0.0/0 via 192.168.10.254
h2 ip route add 0.0.0.0/0 via 192.168.20.254
h3 ip route add 0.0.0.0/0 via 192.168.30.254

#Lire les fichiers hello_event.py et timeout_event.py et les copier ou c'est indiquer dans le fichier
#Lancement du ryu Manager avec l'appli
#Se placer dans le répertoire ou est situé dynamic_rest_router.py
#Copier hello_event.py et timeout_event.py dans /usr/local/lib/python2.7/dist-packages/ryu/app/timeout_event.py
#Ou dans le répertoire équivalent si il est différent en fonction de sa distribution
ryu-manager --verbose dynamic_rest_router.py ryu.app.hello_event ryu.app.timeout_event



#Ajout des addresses ip sur les interface des routeurs
